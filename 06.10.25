import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        System.out.println("Введите размер: ");
        String size = in.nextLine();

        System.out.println("Введите цвет: ");
        String color = in.nextLine();

        System.out.println("Введите школу: ");
        String school = in.nextLine();

        System.out.println("Вы выбрали: ");
        System.out.println("Размер: " + size);
        System.out.println("Цвет: " + color);
        System.out.println("Школа: " + school);
        System.out.println("Цена: 15 000 тг.");
        System.out.println("Доступна доставка");

        System.out.print("Хотите оформить заказ? (да/нет): ");
        String answer = in.nextLine();

        if (answer.equalsIgnoreCase("да")) {
            System.out.print("Введите адрес доставки: ");
            String address = in.nextLine();

            System.out.println("Заказ оформлен!");
            System.out.println("Адрес доставки: " + address);
            System.out.println("Спасибо за покупку :)");
        } else {
            System.out.println("Вы отменили покупку :(");
        }

        System.out.println("Конец программы.");
        in.close();
    }
}
